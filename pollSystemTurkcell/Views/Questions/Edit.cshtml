@model pollSystemTurkcell.Models.Question

@{
    ViewData["Title"] = "Edit";
}

<h1>Düzenle</h1>

<h4>Soru</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Text" class="control-label"></label>
                <input asp-for="Text" class="form-control" />
                <span asp-validation-for="Text" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label><strong>Anket İsmi</strong> </label>
                <p>
                    <span class="badge bg-success">@ViewBag.PollName</span>
                </p>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="@Model.PollID" value="@Model.PollID" />
                <input type="hidden" asp-for="@Model.ID" />
                <input type="submit" value="Kaydet" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Details" asp-controller="Polls" asp-route-pollID="@Model.PollID">Anket detaylarına dön</a>
</div>

