@model pollSystemTurkcell.Models.PollResponse

@{
    ViewData["Title"] = "Reply";
}

<h1>@ViewBag.PollName Anketi</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Reply">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="@Model.PollID" value="@ViewBag.PollID" />
            <input type="hidden" asp-for="@Model.RespondentID" value="@ViewBag.RespondentID" />
            @foreach (var item in ViewBag.Questions)
            {
                <input type="hidden" asp-for="@Model.QuestionID" value="@item.ID" />
                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="Answer" /> @Html.DisplayNameFor(model => model.Answer)
                    </label>
                </div>
                <div class="form-group">
                    <label asp-for="Notes" class="control-label"></label>
                    <input asp-for="Notes" class="form-control" />
                    <span asp-validation-for="Notes" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            }
            <div class="form-group">
                <a type="button" asp-action="Index" asp-controller="PollReply" class="btn btn-info" method="post">Anketi Bitir</a>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Listeye Dön</a>
</div>

