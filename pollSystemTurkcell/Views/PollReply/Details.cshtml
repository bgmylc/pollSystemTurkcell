@model pollSystemTurkcell.Models.Poll

@{
    ViewData["Title"] = "Details";
}

<h1>Detaylar</h1>

<div>
    <h4>Anket</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Details)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Details)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Deadline)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Deadline)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Questions)
        </dt>
        <dd class="col-sm-10">
            @foreach (var item in ViewBag.Questions)
            {
                <p>@item.Text</p>

            }
        <dt class="col-sm-2">
            Cevaplayanların Sayısı
        </dt>
        <dd class="col-sm-10">
            @ViewBag.NoOfAnswers
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CreationDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CreationDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CreatorID)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Creator.Name)
        </dd>
    </dl>
</div>
<div>
    
    <a asp-action="Index">Listeye Dön</a>
</div>
