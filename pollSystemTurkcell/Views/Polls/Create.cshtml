@model pollSystemTurkcell.Models.Poll

@{
    ViewData["Title"] = "Create";
    DateTime now = DateTime.Now;
    string dateNow = now.ToUniversalTime().ToString("u");

}

<h1>Yeni Anket Ekle</h1>

<h4>Anket Bilgileri</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Details" class="control-label"></label>
                <input asp-for="Details" class="form-control" />
                <span asp-validation-for="Details" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NoOfConfirmations" class="control-label"></label>
                <input asp-for="NoOfConfirmations" class="form-control" />
                <span asp-validation-for="NoOfConfirmations" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Deadline" class="control-label"></label>
                <input type="date" asp-for="Deadline" min="@dateNow" class="form-control" />
                <span asp-validation-for="Deadline" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="@Model.CreationDate" value="@DateTime.Now" />
            <input type="hidden" asp-for="@Model.CreatorID" value="@ViewBag.CreatorID" />
            <div class="form-group">
                <input type="submit" value="Ekle" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Listeye Dön</a>
</div>

