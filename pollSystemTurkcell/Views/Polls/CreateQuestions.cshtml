@model pollSystemTurkcell.Models.Question

@{
    ViewData["Title"] = "CreateQuestions";
}

<h1>Anket Sorularını Ekle</h1>

<h4>Sorular</h4>
<hr />


<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateQuestions">
            @for (int i = 0; i < ViewBag.NoOfQ; i++)
            {
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Text" class="control-label"></label>
                    <input asp-for="Text" class="form-control" />
                    <span asp-validation-for="Text" class="text-danger"></span>
                </div>
                <input type="hidden" asp-for="@Model.PollID" value="@ViewBag.PollID" />
            }

            <div class="form-group">
                <input type="submit" value="Ekle" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Listeye Dön</a>
</div>

